	<body class="is-preload">

		<!-- Wrapper -->
		  <div id="wrapper">
       <!-- Header -->

			   <header id="header">
				　<a id="logo"><span>K-Studio</span></a>
			   </header>

              <figure>
               <%= image_tag 'banner.jpg' %>
                 <figcaption class="decorator">
				   <div class="inner">
				    <header class="major">
					  <h1>K-Studio</h1>
					</header>
					 <div class="content">
